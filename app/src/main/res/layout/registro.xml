<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paperb">

    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/lblregistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="Registro"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal" />

    <EditText android:id="@+id/txtNombre" android:layout_marginTop="40dip" android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:hint="Nombre" android:textSize="30dp"
        android:padding="5dip"
        android:background="@color/common_signin_btn_dark_text_default" />


    <EditText android:id="@+id/txtUserName" android:layout_height="wrap_content" android:layout_width="fill_parent"
        android:hint="UserName" android:inputType="text" android:layout_marginTop="15dip"
        android:textSize="30dp"
        android:padding="5dip"
        android:background="@color/common_signin_btn_dark_text_default"/>



    <EditText android:id="@+id/txtPass" android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:hint="Password" android:inputType="textPassword"
        android:layout_marginTop="15dip" android:layout_marginBottom="30dip" android:textSize="30dp"
        android:padding="5dip"
        android:background="@color/common_signin_btn_dark_text_default"/>

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="73dp">
    <TextView
        android:id="@+id/lblFecha"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:text="@string/date_selected"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:textSize="30dp"
        android:padding="5dip"
        android:background="@color/common_signin_btn_dark_text_default" />

    <Button
        android:id="@+id/button1"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:onClick="setDate"
        android:text="@string/date_button_set"
        android:layout_gravity="right"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dip"/>
    </RelativeLayout>

    <Button android:id="@+id/btnRegister" android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:text="Registrar"
        android:layout_gravity="center_horizontal" android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:textSize="30dip"/>


    <TextView android:id="@+id/register_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"

        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#0b84aa"/>

    <TextView android:id="@+id/link_to_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="40dip"
        android:text="Ya tienes cuenta! Accede!"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#0b84aa"/>
</LinearLayout>