<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paperc"
    android:weightSum="1"
    >
    <ImageButton android:background="#00000000" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btnvolvergirar" android:layout_alignParentTop="true" android:src="@drawable/volver" android:layout_alignParentRight="true"/>
    <TextView
        android:layout_marginTop="80px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lblpregunta"
        android:layout_gravity="center_horizontal"
         />

    <Button
        android:layout_marginTop="40px"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnrespuesta1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:background="@drawable/botonespreguntas"/>

    <Button
        android:layout_marginTop="40px"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnrespuesta2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:background="@drawable/botonespreguntas"/>

    <Button
        android:layout_marginTop="40px"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnrespuesta3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:background="@drawable/botonespreguntas"/>

    <Button
        android:layout_marginTop="40px"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnrespuesta4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:background="@drawable/botonespreguntas"/>

</LinearLayout>