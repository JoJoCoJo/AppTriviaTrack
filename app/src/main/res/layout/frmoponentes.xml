<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redondo">

    <ListView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="19dp" android:layout_marginLeft="20dp" android:layout_below="@+id/lblcliente" android:layout_alignParentLeft="true" android:id="@+id/listoponentes" > </ListView>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="40dp" android:id="@+id/lblcliente" android:textSize="30sp" android:text="Oponentes" android:layout_alignParentTop="true" android:layout_alignLeft="@+id/listoponentes"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/lblClienteAtender" android:textSize="20sp" android:text="Usuario" android:layout_alignParentTop="true" android:layout_alignLeft="@+id/lblcliente"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/lblnomase" android:textSize="20sp" android:text="TextView" android:layout_alignParentTop="true" android:textColor="#ff0000" android:layout_toRightOf="@+id/lblClienteAtender"/>

    <ImageButton android:background="#00000000" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btnvolverdetalle" android:layout_alignParentTop="true" android:src="@drawable/volver" android:layout_alignParentRight="true"/>


</RelativeLayout>